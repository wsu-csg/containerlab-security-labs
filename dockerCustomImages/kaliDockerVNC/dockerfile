FROM kalilinux/kali-rolling:latest

# Install all packages in one RUN to reduce layers
RUN apt update && apt install -y \
    net-tools \
    wireshark \
    ettercap-text-only \
    nmap \
    iputils-ping \
    openssh-server \
    xvfb \
    x11vnc \
    novnc \
    websockify \
    firefox-esr \
    xfce4 \
    xfce4-terminal \
    tigervnc-common \
    tigervnc-standalone-server \
    && apt clean \
    && rm -rf /var/lib/apt/lists/*

# Set up VNC directory
RUN mkdir -p /root/.vnc

EXPOSE 3000 5901 6080 22